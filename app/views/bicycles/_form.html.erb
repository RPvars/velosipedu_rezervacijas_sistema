<%= form_with(model: bicycle, class: "space-y-6") do |form| %>
  <% if bicycle.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 rounded-md mb-4">
      <h2 class="text-lg font-medium mb-2"><%= pluralize(bicycle.errors.count, "error") %> prohibited this bicycle from being saved:</h2>
      <ul class="list-disc list-inside">
        <% bicycle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :model, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :model, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, ['available', 'reserved', 'in_repair'], { prompt: "Select status" }, class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
  </div>

  <div>
    <%= form.label :battery_level, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex rounded-md shadow-sm">
      <%= form.number_field :battery_level, in: 0..100, step: 1, class: "flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-l-md focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300" %>
      <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
        %
      </span>
    </div>
  </div>

  <div>
    <%= form.label :last_maintenance, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :last_maintenance, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.submit class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>